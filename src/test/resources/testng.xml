<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="All Test Suite" parallel="classes" thread-count="2">
    <listeners>
        <listener class-name="eu.senla.listeners.SuiteXmlTransformer"/>
        <listener class-name="eu.senla.listeners.ScreenshotListener"/>
    </listeners>

    <test name="Smoke">
        <parameter name="browser" value="${browser}"/>
        <classes>
            <class name="eu.senla.LogoutTest"/>
            <class name="eu.senla.LoginTest"/>
            <class name="eu.senla.AssignLeaveTest"/>
            <class name="eu.senla.AddDeleteJobTitlesTest"/>
        </classes>
    </test>
</suite>